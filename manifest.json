{
  "manifest_version": 2,

  "name": "openHAB Controller",
  "short_name": "openHAB Controller",
  "description": "Control your home from anywhere using your openHAB sitemap and Firefox!",
  "version": "0.1.1",

  "background": {
    "scripts": ["js/context-menu.js"]
  },

  "options_ui": {
    "page": "html/internalOptions.html"
  },

  "browser_action": {
    "default_popup": "html/popup.html",
    "browser_style": true,
    "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
  },

  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ]
}
